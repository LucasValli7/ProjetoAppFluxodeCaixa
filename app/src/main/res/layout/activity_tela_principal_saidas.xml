<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaPrincipalSaidas">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/txt_teste"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="35sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black" />


    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:title="Saídas de Caixa"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_icon_back"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtTipoDeSaida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Tipo de Saída"
        android:textColor="@color/blacl_ligth"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinearLayout" />

    <TextView
        android:id="@+id/txt_ValorSaida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Total de Saída"
        android:textColor="@color/blacl_ligth"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinearLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ListaTipoSaida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="@id/txt_ValorSaida"
        app:layout_constraintStart_toStartOf="@id/txtTipoDeSaida"
        app:layout_constraintTop_toBottomOf="@id/txtTipoDeSaida" />

    <Button
        android:id="@+id/btn_addSaida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova Saida"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/edit_txt_shape"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/TotaldeSaidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Total de Saídas"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toStartOf="@id/ValorTotalSaidas"
        app:layout_constraintBottom_toTopOf="@id/btn_addSaida"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ValorTotalSaidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="0"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_addSaida"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>